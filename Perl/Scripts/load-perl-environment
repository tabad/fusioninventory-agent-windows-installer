declare arch=''
declare arch_label=''
declare -a -r archs=(x64 x86)
declare -a -r arch_labels=(64bit 32bit)

declare -r strawberry_version='5.22.0.1'
declare -r strawberry_release='Jun 2015'
declare -r strawberry_path="../Strawberry/${strawberry_version}"

declare -r strawberry_arch_path='${strawberry_path}/${arch}'
declare -r strawberry_arch_url='http://strawberryperl.com/download/${strawberry_version}/strawberry-perl-${strawberry_version}-${arch_label}-portable.zip'

declare -r strawberry_pepfia_branch='2.3.x'
declare -r strawberry_pepfia_build_id='1'
declare -r strawberry_pepfia_path="${strawberry_path%/${strawberry_version}}"
declare -r strawberry_pepfia_file="strawberry-perl-${strawberry_version}-all-pepfia-${strawberry_pepfia_branch}-${strawberry_pepfia_build_id}.tar.xz"
declare -r strawberry_pepfia_par_file='strawberry-perl-${strawberry_version}-${arch}-par-pepfia-${strawberry_pepfia_branch}-${strawberry_pepfia_build_id}.zip'
declare -r strawberry_pepfia_par_template_file='fusioninventory-agent-par-template.pl'
declare -r strawberry_pepfia_url='https://sourceforge.net/projects/fiawi/files/strawberry-perl-packages'

declare -i -r maximum_commit_length=10

declare +r fusinv_agent_commit='3b3b6b7867'
declare -r fusinv_agent_mod_name='FusionInventory-Agent'
declare -r fusinv_agent_repository='https://github.com/fusinv/fusioninventory-agent.git'
declare -r fusinv_agent_mod_dependences='Archive::Extract Compress::Zlib Digest::SHA File::Copy::Recursive File::Which HTTP::Daemon IO::Socket::SSL JSON LWP::Protocol::https LWP::UserAgent Net::IP Net::NBName Net::Ping Net::SNMP Net::Write::Layer2 Parallel::ForkManager Parse::EDID Text::Template Thread::Queue UNIVERSAL::require URI::Escape Win32::Daemon Win32::Job Win32::OLE Win32::TieRegistry Win32::Unicode::File XML::TreePP'
declare -r fusinv_agent_mod_specific_dependences=''
declare -r fusinv_agent_mod_uses='base Compress::Zlib Config constant Crypt::DES Cwd Data::Dumper Digest::MD5 Digest::SHA Encode English Fcntl File::Basename File::Copy::Recursive File::Find File::Glob File::Path File::Spec File::stat File::Temp File::Which Getopt::Long HTTP::Cookies HTTP::Daemon HTTP::Headers HTTP::Request HTTP::Status IO::Handle IO::Socket::SSL JSON List::Util LWP LWP::UserAgent Memoize MIME::Base64 Net::Domain Net::hostent Net::IP Net::Ping Net::SNMP Parallel::ForkManager Pod::Usage POSIX Scalar::Util Socket Storable Sys::Hostname Text::Template threads Thread::Queue threads::shared Time::HiRes Time::Local Time::localtime UNIVERSAL::require URI URI::Escape User::pwent Win32 Win32::API Win32::Daemon Win32::Job Win32::OLE Win32::OLE::Const Win32::OLE::Variant XML::TreePP'

declare -r fusinv_mod_uses_not_detected_by_par='Encode::Byte Encode::CN Encode::JP Encode::KR Encode::TW Encode::Unicode Tie::Hash::NamedCapture'

if (( ${#fusinv_agent_commit} > ${maximum_commit_length} )); then
   fusinv_agent_commit="${fusinv_agent_commit:0:${maximum_commit_length}}"
fi

declare -r fusinv_agent_commit
